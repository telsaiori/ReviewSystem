<span class="post_title">Proposal</span>
<hr>
<h2>Title</h2>
<p><%= @post.title %>[<%= link_to 'Edit', edit_admin_event_post_path(@event, @post) %>]</p>
<h2>Content</h2>
<p><%= sanitize markdown @post.body %></p>

<hr>
<h1>Comments</h1>
<div class="proposal_comments">
  <% if @post.comments.any? %>
    <%= form_tag del_comments_admin_comments_path, method: :delete %>
      <%= render partial: 'comment', collection: @post.comments.includes(:user), as: 'comment' %>
    <%= submit_tag 'Delete selected comments' %>
  <% else %>
    <p>No comments now</p>
  <% end %>
</div>

